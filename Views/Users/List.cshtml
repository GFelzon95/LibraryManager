
@{
    ViewBag.Title = "List";
}

<h2>Users List</h2>
<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
        </tr>
    </thead>

    <tbody>

    </tbody>
</table>

@section scripts
    {
        <script>
            $(document).ready(function () {
                $("#users").DataTable({
                    ajax: {
                        url: "/api/users",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "id",
                            render: function (data) {
                                return "<a href='/users/edit/" + data + "'>" + data + "</a>";
                            }
                        },
                        {
                            data: "email"
                        }
                    ]
                })
            })
        </script>
    } 